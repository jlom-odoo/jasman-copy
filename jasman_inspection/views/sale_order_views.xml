<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='optional_products']" position="attributes">
                <attribute name="invisible">False</attribute>
            </xpath>
            <xpath expr="//field[@name='sale_order_option_ids']//tree//field[@name='is_present']" position="before">
                <field name="urgency" widget="priority" readonly="1"/>
                <field name="is_present" groups="sales_team.group_sale_manager" optional="hide"/>
            </xpath>
            <xpath expr="//field[@name='sale_order_option_ids']" position="attributes">
                <attribute name="readonly"></attribute>
            </xpath>
            <xpath expr="//button[@id='create_invoice']" position="after">
                <field name="additional_optional_line_ids" invisible="1"/>
                <button name="add_extra_quote" 
                        string="Create Extra Quote" 
                        type="object" 
                        class="oe_stat_button" 
                        invisible="not additional_optional_line_ids"/>
            </xpath>
        </field>
    </record>
</odoo>
