<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_rule_view_form" model="ir.ui.view">
        <field name="name">loyalty.rule.view.form.custom.jasman</field>
        <field name="model">loyalty.rule</field>
        <field name="inherit_id" ref="loyalty.loyalty_rule_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_domain']" position="after">
                <field name="sale_line_domain" groups="base.group_no_one" widget="domain" options="{'model': 'sale.order.line', 'in_dialog': true}"/>
            </xpath>
        </field>
    </record>
</odoo>
