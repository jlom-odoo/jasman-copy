<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="loyalty_program_view_form" model="ir.ui.view">
        <field name="name">loyalty.program.view.form.custom.jasman</field>
        <field name="model">loyalty.program</field>
        <field name="inherit_id" ref="loyalty.loyalty_program_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]/field[@name='portal_point_name']" position="after">
                <field name="line_discount" invisible="program_type != 'promotion'"/>
            </xpath>
        </field>
    </record>
</odoo>
