<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.view.form.inherit.jasman.sale.template</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="sale_order_template_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <notebook position="inside">
                <page name="order_templates" string="Templates">
                    <field name="sale_order_template_ids"/>
                </page>
            </notebook>
            <xpath expr="//page[@name='order_lines']/field[@name='order_line']/tree" position="inside">
                <field name="sale_order_template_id" column_invisible="True"/>
            </xpath>
        </field>
    </record>
</odoo>
