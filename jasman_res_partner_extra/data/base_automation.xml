<?xml version="1.0"?>
<odoo>
    <record id="automation_set_date_due_pay_day" model="base.automation">
        <field name="name">Set Due date based on Pay Day</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="trigger">on_create</field>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_server_date_due_pay_day')])]"/>
        <field name="filter_pre_domain">[("move_type", "in", ["out_invoice", "out_refund"])]</field>
    </record>

    <record id="automation_set_invoice_payment_reference" model="base.automation">
        <field name="name">Set Invoice Payment Reference</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="trigger">on_create</field>
        <field name="action_server_ids" eval="[(6, 0, [ref('action_server_set_payment_reference')])]"/>
        <field name="filter_pre_domain">[("move_type", "in", ["out_invoice", "out_refund"])]</field>
    </record>
</odoo>
